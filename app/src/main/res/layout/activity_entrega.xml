<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codigo.rafael.easygasentregador.EntregaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_entrega_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:title="Distribuidoras"
        android:titleTextColor="#ffffff"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:id="@+id/sv_elementos_entrega_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_entrega_activity"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/rl_elementos_activity_entrega"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_nome_cliente_entrega_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Cliente"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_endereco_cliente_entrega_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nome_cliente_entrega_activity"
                android:layout_marginTop="10dp"
                android:text="Endereço Cliente"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_complemento_cliente_entrega_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_endereco_cliente_entrega_activity"
                android:layout_marginTop="10dp"
                android:text="Complemento Endereço"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_bairro_cliente_entrega_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_complemento_cliente_entrega_activity"
                android:layout_marginTop="10dp"
                android:text="Bairro"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
