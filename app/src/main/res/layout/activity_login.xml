            <!--android:paddingLeft="24dp"-->
            <!--android:paddingRight="24dp"-->
            <!--android:shadowColor="@color/colorAccent"-->
            <!--android:text="Login Com Facebook"-->
            <!--android:textColor="#ffffff" />-->


            <!--<android.support.v7.widget.AppCompatButton-->
            <!--android:id="@+id/btn_google"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="46dp"-->
            <!--android:layout_marginBottom="24dp"-->
            <!--android:layout_marginLeft="24dp"-->
            <!--android:layout_marginRight="24dp"-->
            <!--android:layout_marginTop="24dp"-->
            <!--android:background="@color/colorGradienteGoogle"-->
            <!--android:drawableLeft="@mipmap/ic_google"-->
            <!--android:drawablePadding="2dp"-->
            <!--android:padding="12dp"-->
            <!--android:paddingLeft="24dp"-->
            <!--android:paddingRight="24dp"-->
            <!--android:shadowColor="@color/colorAccent"-->
            <!--android:text="Login Com Google"-->
            <!--android:textColor="#ffffff" />-->

            <TextView
                android:id="@+id/link_esqueci_senha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Esqueci minha senha"
                android:textColor="@color/colorAccent"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/link_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Não é cadastrado? Cadastre-se!"
                android:textColor="@color/colorAccent"
                android:textSize="16dip" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
